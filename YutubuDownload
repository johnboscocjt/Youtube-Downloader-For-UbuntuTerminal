echo -e "${BRIGHT_GREEN}‚ïë${RESET}                                                                              ${BRIGHT_GREEN}‚ïë${RESET}"
FOLDER_DISPLAY="$( [[ "$USE_FOLDER" == "true" ]] && echo "$FOLDER_NAME" || echo "Current directory" )"
