echo -e "${BRIGHT_MAGENTA}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${RESET}"
echo ""

# === PROGRESS BAR SETUP ===
BAR_WIDTH=20
CSI="\033["
HIDE_CURSOR="${CSI}?25l"
SHOW_CURSOR="${CSI}?25h"
CLEAR_LINE="${CSI}2K"
GOTO_COL1="${CSI}0G"
UP_1="${CSI}1A"
DOWN_1="${CSI}1B"

echo -e "$HIDE_CURSOR"
trap 'echo -e "${SHOW_CURSOR}"; echo -e "\r${CLEAR_LINE}${GOTO_COL1}"; echo -e "${UP_1}${CLEAR_LINE}${GOTO_COL1}"; exit' INT TERM EXIT

DISPLAY_LOCATION="${FOLDER_NAME:-Current directory}"

echo -e "${BRIGHT_MAGENTA}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${RESET}"
echo -e "${BRIGHT_CYAN}üì• DOWNLOAD IN PROGRESS${RESET}"
echo -e "${BRIGHT_MAGENTA}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${RESET}"
echo -e "${SKY_BLUE}Starting download...${RESET}"

# === CORE yt-dlp COMMAND ‚Äî NO ARCHIVE + WORKING PROGRESS ===
DOWNLOAD_SUCCESS=false

if yt-dlp \
    $PLAYLIST_FLAG \
    $MP3_FLAGS \
    -f "$FORMAT" \
    -o "$OUTPUT_TEMPLATE" \
    $JS_RUNTIME \
    --cookies-from-browser chrome \
    --user-agent "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36" \
    --ignore-errors \
    --continue \
    --no-overwrites \
    --merge-output-format mp4 \
    --console-title \                          # ‚Üê‚Üê THIS ENABLES PROGRESS
    --newline \
    --no-warnings \
    --progress-template "download:%(progress.downloaded_bytes)s %(progress.total_bytes)s %(progress._percent_str)s %(progress._eta_str)s %(progress._speed_str)s" \
    --output-na-placeholder "-" \
    "$URL" 2>&1 | while IFS= read -r line; do

    # Handle metadata lines
    if [[ "$line" =~ ^\[(youtube|download)\] ]]; then
        if [[ "$line" == *"[download] Downloading playlist:"* ]]; then
            echo -e "${BRIGHT_MAGENTA}$line${RESET}"
        elif [[ "$line" == *"[download] Downloading item "* ]]; then
            echo -e "${BRIGHT_CYAN}$line${RESET}"
        elif [[ "$line" == *"[ExtractAudio]"* ]] || [[ "$line" == *"[Merger]"* ]]; then
            printf "\r${CLEAR_LINE}${GOTO_COL1}"
            printf "\r${CLEAR_LINE}${GOTO_COL1}"
            if [[ "$IS_MP3" == "true" ]]; then
                echo -e "${BRIGHT_GREEN}‚û°Ô∏è  Converting to MP3...${RESET}"
            else
                echo -e "${BRIGHT_GREEN}‚û°Ô∏è  Merging audio/video...${RESET}"
            fi
        elif [[ "$line" == *"[youtube]"* ]] || [[ "$line" == *"[download]"* ]]; then
            echo -e "${CYAN}$line${RESET}"
        fi
        continue
    fi

    # ‚úÖ ONLY process real progress lines
    if [[ "$line" == download:* ]]; then
        read -r _ downloaded total percent eta speed <<< "$line"
        if [[ "$percent" =~ ^([0-9]+)(\.[0-9]+)?%$ ]]; then
            percent_int="${BASH_REMATCH[1]}"
            dl_mib=$(( downloaded / 1048576 ))
            tot_mib=$(( total / 1048576 ))

            filled=$(( (percent_int * BAR_WIDTH) / 100 ))
            bar=$(printf '‚ñà%.0s' $(seq 1 "$filled"))
            empty=$(printf '‚ñë%.0s' $(seq 1 $((BAR_WIDTH - filled))))
            full_bar="$bar$empty"

            printf "\r${CLEAR_LINE}${GOTO_COL1}"
            if [ "$percent_int" -ge 99 ]; then
                printf "Downloading: ${GREEN}%s${RESET} %s ${BRIGHT_BLUE}[%dMiB/%dMiB]${RESET}${BRIGHT_GREEN} Done!${RESET}\n" \
                    "$full_bar" "100.0%" "$dl_mib" "$tot_mib"
            else
                printf "Downloading: ${GREEN}%s${RESET} %s ${BRIGHT_BLUE}[%dMiB/%dMiB]${RESET}\n" \
                    "$full_bar" "$percent" "$dl_mib" "$tot_mib"
            fi

            printf "ETA: ${YELLOW}%s${RESET} | Speed: ${CYAN}%s${RESET} | Location: ${MAGENTA}%s${RESET}" \
                "$eta" "$speed" "$DISPLAY_LOCATION"
            sleep 0.1
        fi
        continue
    fi

done; then
    DOWNLOAD_SUCCESS=true
else
    EXIT_CODE=$?
    [[ $EXIT_CODE -ne 0 ]] && echo -e "\n${ORANGE}‚ö†Ô∏è  Download exited with code $EXIT_CODE${RESET}"
fi

echo -e "${SHOW_CURSOR}"

if [[ "$DOWNLOAD_SUCCESS" == false ]]; then
    echo -e "${BRIGHT_MAGENTA}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${RESET}"
    print_error "‚ùå DOWNLOAD FAILED"
    echo -e "${BRIGHT_MAGENTA}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${RESET}"
    echo -e "${CYAN}   üí° TANZANIA FIX:${RESET}"
    echo -e "     1. Disconnect WiFi/Ethernet"
    echo -e "     2. Wait 10 seconds"
    echo -e "     3. Reconnect and retry"
    exit 1
fi

# === COMPLETION BOX ===
